		НовыйУзелНоменклатура.Номенклатура = НоменклатураСсылка;
		НовыйУзелНоменклатура.Картинка = 0; // Картинка для родительского узла
		СоответствиеНоменклатураУзел.Вставить(НоменклатураСсылка, НовыйУзелНоменклатура);
	КонецЦикла;
	
	// Добавляем дочерние узлы для рецептур
	Для Каждого Строка Из ТаблицаБезЗамен Цикл
		РодительскийУзел = СоответствиеНоменклатураУзел[Строка.Номенклатура];
		Если РодительскийУзел <> Неопределено Тогда
			НовыйУзелРецептура = РодительскийУзел.ПолучитьЭлементы().Добавить();
