Процедура СохранитьЗаменыНаСервере()
	
	// Шаг 1: Сбор указанных пользователем замен из родительских узлов дерева
	КартаЗамен = Новый Соответствие;
	Для Каждого УзелНоменклатуры Из ТаблицаПозицийБезЗамен.ПолучитьЭлементы() Цикл
		Если ЗначениеЗаполнено(УзелНоменклатуры.Замена) Тогда
			КартаЗамен.Вставить(УзелНоменклатуры.Номенклатура, УзелНоменклатуры.Замена);
		КонецЕсли;
	КонецЦикла;
	
	// Шаг 2: Применение замен ко всем родительским узлам
	Если КартаЗамен.Количество() > 0 Тогда
		Для Каждого УзелНоменклатуры Из ТаблицаПозицийБезЗамен.ПолучитьЭлементы() Цикл
			Если НЕ ЗначениеЗаполнено(УзелНоменклатуры.Замена) Тогда
				ЗаменаДляТекущей = КартаЗамен[УзелНоменклатуры.Номенклатура];
				Если ЗаменаДляТекущей <> Неопределено Тогда
					УзелНоменклатуры.Замена = ЗаменаДляТекущей;
				КонецЕсли;
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
	// Шаг 3: Сохранение всех заполненных замен в регистр
	КоличествоОбновлено = 0;
	КоличествоСоздано = 0;

	Для Каждого УзелНоменклатуры Из ТаблицаПозицийБезЗамен.ПолучитьЭлементы() Цикл
		
		Если ЗначениеЗаполнено(УзелНоменклатуры.Замена) Тогда
			
			Попытка
				МенеджерЗаписи = РегистрыСведений.MRS_СоответствиеСтаройНовойНоменклатуры.СоздатьМенеджерЗаписи();
				МенеджерЗаписи.ВскрытаяНоменклатура = УзелНоменклатуры.Номенклатура;
				МенеджерЗаписи.Прочитать();
				
				Если МенеджерЗаписи.Выбран() Тогда
					МенеджерЗаписи.НоваяНоменклатура = УзелНоменклатуры.Замена;
					МенеджерЗаписи.Записать();
					КоличествоОбновлено = КоличествоОбновлено + 1;
				Иначе
					МенеджерЗаписи.ВскрытаяНоменклатура = УзелНоменклатуры.Номенклатура;
					МенеджерЗаписи.НоваяНоменклатура = УзелНоменклатуры.Замена;
					МенеджерЗаписи.Записать();
					КоличествоСоздано = КоличествоСоздано + 1;
				КонецЕсли;
			Исключение
				Сообщить("Не удалось записать соответствие для номенклатуры " + УзелНоменклатуры.Номенклатура + ". Ошибка: " + ОписаниеОшибки());
			КонецПопытки;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Если КоличествоСоздано > 0 Или КоличествоОбновлено > 0 Тогда
		Сообщить("Успешно сохранено. Создано: " + КоличествоСоздано + ", обновлено: " + КоличествоОбновлено + ".");
		// Обновляем таблицу, чтобы убрать уже обработанные позиции
		ПоказатьПозицииБезЗаменНаСервере();
	Иначе
		Сообщить("Не было указано ни одной замены для сохранения.");
	КонецЕсли;
	
КонецПроцедуры
