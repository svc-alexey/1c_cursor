Процедура СоздатьсборкиНаСервере()
	
	// Оптимизация: Предварительно получим все необходимые данные одним запросом
	МассивНовыхРецептур = Рецептуры.ВыгрузитьКолонку("РецептураНовая");
	МассивНовыхРецептур = ОбщегоНазначения.УдалитьПустыеСтрокиИзМассива(МассивНовыхРецептур);
	
	СоответствиеСборок = Новый Соответствие;
	СоответствиеСпецификаций = Новый Соответствие;
	
	Если МассивНовыхРецептур.Количество() > 0 Тогда
		ЗапросПредварительный = Новый Запрос;
		ЗапросПредварительный.Текст = 
			"ВЫБРАШЬ РАЗРЕШЕННЫЕ
			|	КомплектацияНоменклатуры.Ссылка КАК СборкаСсылка,
			|	КомплектацияНоменклатуры.Владелец КАК НоменклатураВладелец
			|ПОМЕСТИТЬ ВТ_Сборки
			|ИЗ
			|	Документ.КомплектацияНоменклатуры КАК КомплектацияНоменклатуры
			|ГДЕ
			|	КомплектацияНоменклатуры.Рецептура = &Рецептура
			|;
			|
			|ВЫБРАТЬ
			|	РесурсныеСпецификации.Ссылка КАК СпецификацияСсылка,
			|	РесурсныеСпецификации.Номенклатура КАК НоменклатураВладелец
			|ПОМЕСТИТЬ ВТ_Спецификации
			|ИЗ
			|	Справочник.РесурсныеСпецификации КАК РесурсныеСпецификации
			|ГДЕ
			|	РесурсныеСпецификации.Номенклатура В (
			|		ВЫБРАТЬ РАЗЛИЧНЫЕ
			|			Рецептуры.НоменклатураНовая
			|		ИЗ
			|			&ТаблицаРецептур КАК Рецептуры
			|	)
			|;
			|
			|ВЫБРАТЬ
			|	Рецептуры.НоменклатураНовая КАК НоменклатураНовая,
			|	ВТ_Сборки.СборкаСсылка,
			|	ВТ_Спецификации.СпецификацияСсылка
			|ИЗ
			|	&ТаблицаРецептур КАК Рецептуры
			|		ЛЕВОЕ СОЕДИНЕНИЕ ВТ_Сборки КАК ВТ_Сборки
			|		ПО Рецептуры.НоменклатураНовая = ВТ_Сборки.НоменклатураВладелец
			|		ЛЕВОЕ СОЕДИНЕНИЕ ВТ_Спецификации КАК ВТ_Спецификации
			|		ПО Рецептуры.НоменклатураНовая = ВТ_Спецификации.НоменклатураВладелец";
		
		ЗапросПредварительный.УстановитьПараметр("Рецептура", МассивНовыхРецептур[0]); // Предполагается, что рецептура одна для всех
		ЗапросПредварительный.УстановитьПараметр("ТаблицаРецептур", Рецептуры.Выгрузить());
		
		Результат = ЗапросПредварительный.Выполнить();
		
		Если НЕ Результат.Пустой() Тогда
			Выборка = Результат.Выбрать();
			Пока Выборка.Следующий() Цикл
				СоответствиеСборок.Вставить(Выборка.НоменклатураНовая, Выборка.СборкаСсылка);
				СоответствиеСпецификаций.Вставить(Выборка.НоменклатураНовая, Выборка.СпецификацияСсылка);
			КонецЦикла;
		КонецЕсли;
	КонецЕсли;
	// Обрабатываем пакетами
	РазмерПакета = 10;
	КоличествоПакетов = Цел(Рецептуры.Количество() / РазмерПакета) + ?(Рецептуры.Количество() % РазмерПакета = 0, 0, 1);
	Сообщить("Начинаем создание сборок и спецификаций. Всего: " + Рецептуры.Количество() + " в " + КоличествоПакетов + " пакетах.");
	
	ОбщееКоличествоСозданоСборок = 0;
	ОбщееКоличествоСозданоСпецификаций = 0;
	
	Для НомерПакета = 0 По КоличествоПакетов - 1 Цикл
		НачатьТранзакцию();
		Попытка
			Для Индекс = НомерПакета * РазмерПакета По Мин((НомерПакета + 1) * РазмерПакета - 1, Рецептуры.Количество() - 1) Цикл
				
				ТекСтрока = Рецептуры[Индекс];
				
				// Пропускаем строки без новой рецептуры или новой номенклатуры
				Если НЕ ЗначениеЗаполнено(ТекСтрока.РецептураНовая) Или НЕ ЗначениеЗаполнено(ТекСтрока.НоменклатураНовая) Тогда
					Продолжить;
				КонецЕсли;
				
				// Создание сборки (комплектации)
				СуществующаяСборка = СоответствиеСборок[ТекСтрока.НоменклатураНовая];
				Если СуществующаяСборка = Неопределено Тогда
					ДокументСборка = Документы.КомплектацияНоменклатуры.СоздатьДокумент();
					ДокументСборка.Дата = ТекущаяДатаСеанса();
					ДокументСборка.Организация = Объект.Организация;
					ДокументСборка.ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.СборкаИзКомплектующих;
					ДокументСборка.Комплект = ТекСтрока.НоменклатураНовая;
					ДокументСборка.Количество = 1;
					ДокументСборка.Рецептура = ТекСтрока.РецептураНовая;
					ДокументСборка.ЗаполнитьПоРецептуре();
					ДокументСборка.Записать(РежимЗаписиДокумента.Проведение);
					ОбщееКоличествоСозданоСборок = ОбщееКоличествоСозданоСборок + 1;
				КонецЕсли;
				
				// Создание спецификации
				СуществующаяСпецификация = СоответствиеСпецификаций[ТекСтрока.НоменклатураНовая];
				Если СуществующаяСпецификация = Неопределено Тогда
					СпецификацияОбъект = Справочники.РесурсныеСпецификации.СоздатьЭлемент();
					СпецификацияОбъект.Наименование = "Спецификация для " + ТекСтрока.НоменклатураНовая.Наименование;
					СпецификацияОбъект.Номенклатура = ТекСтрока.НоменклатураНовая;
					СпецификацияОбъект.Статус = Перечисления.СтатусыРесурсныхСпецификаций.Действует;
					СпецификацияОбъект.Записать();
					
					ТекРецептураОбъект = ТекСтрока.РецептураНовая.ПолучитьОбъект();
					Для Каждого СтрокаИнгредиента Из ТекРецептураОбъект.Ингредиенты Цикл
						НоваяСтрокаМатериала = СпецификацияОбъект.МатериалыИРаботы.Добавить();
						НоваяСтрокаМатериала.Номенклатура = СтрокаИнгредиента.Номенклатура;
						НоваяСтрокаМатериала.Количество = СтрокаИнгредиента.Количество;
						НоваяСтрокаМатериала.ЕдиницаИзмерения = СтрокаИнгредиента.ЕдиницаИзмерения;
						НоваяСтрокаМатериала.СтатьяКалькуляции = Справочники.СтатьиКалькуляции.НайтиПоНаименованию("Сырье");
					КонецЦикла;
					СпецификацияОбъект.Записать();
					ОбщееКоличествоСозданоСпецификаций = ОбщееКоличествоСозданоСпецификаций + 1;
				КонецЕсли;
			КонецЦикла;
			
			ЗафиксироватьТранзакцию();
		Исключение
			ОтменитьТранзакцию();
			Сообщить("Ошибка при создании сборок/спецификаций в пакете " + (НомерПакета + 1) + ": " + ОписаниеОшибки());
		КонецПопытки;
		
		Сообщить("Пакет " + (НомерПакета + 1) + "/" + КоличествоПакетов + " обработан.");
	КонецЦикла;
	
	Сообщить("=== СОЗДАНИЕ СБОРОК И СПЕЦИФИКАЦИЙ ЗАВЕРШЕНО ===");
	Сообщить("Создано новых сборок: " + ОбщееКоличествоСозданоСборок);
	Сообщить("Создано новых спецификаций: " + ОбщееКоличествоСозданоСпецификаций);
	
КонецПроцедуры

