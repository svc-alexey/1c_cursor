			НовыйУзелРецептура.Рецептура = Строка.Рецептура;
			НовыйУзелРецептура.Номенклатура = Строка.Номенклатура; // Дублируем для удобства
			НовыйУзелРецептура.Картинка = 1; // Картинка для дочернего узла
		КонецЕсли;
	КонецЦикла;
	
	ТекстСообщения = "Найдено алкогольных позиций без замен: " + УникальныеНоменклатуры.Количество() + " уникальных позиций";
	Сообщить(ТекстСообщения);
	Сообщить("Данные загружены в дерево на странице 'Позиции без замен'");
	
